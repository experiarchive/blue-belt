---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`ads-slot rounded-2xl overflow-hidden shadow-sm ${className}`}>
  <!-- Enhanced placeholder design -->
  <div class="h-full bg-gradient-to-br from-slate-100 via-blue-50 to-teal-50 border border-slate-200 flex items-center justify-center relative">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
    </div>
    
    <!-- Content -->
    <div class="text-center z-10">
      <div class="text-4xl mb-4 opacity-30">🚌✈️</div>
      <p class="text-slate-600 font-medium mb-1">광고 공간</p>
      <p class="text-xs text-slate-400 mb-3">Advertisement Space</p>
      <div class="text-xs text-slate-400 bg-white/50 rounded-full px-3 py-1 inline-block">
        공항버스 · 여행 프로모션
      </div>
    </div>
  </div>
</div>

<style>
  .ads-slot {
    min-height: 280px;
    transition: all 0.2s ease-in-out;
  }
  
  .ads-slot:hover {
    transform: translateY(-1px);
    box-shadow: 0 12px 28px rgba(0,0,0,.12);
  }
</style>